[user]
  name = <%= print("Your Full Name: "); STDOUT.flush; STDIN.gets.chomp %>
  email = <%= print("Your Email: "); STDOUT.flush; STDIN.gets.chomp %>
  signingkey = <%= print("GPG Key: "); STDOUT.flush; STDIN.gets.chomp %>

[core]
  excludesfile = ~/.gitignore_global
  safecrlf = warn
  autocrlf = input
  pager = diff-so-fancy | less --tabs=4 -RFX

[alias]
  amend = commit --amend --reuse-message=HEAD
  bl = blame -C
  br = branch
  ci = commit
  co = checkout
  cp = cherry-pick
  di = diff
  fixup = commit --amend -c HEAD
  hist = log --pretty=format:\"%C(yellow bold)%h%Creset %C(red)%ad%Creset | %s%C(green bold)%d%Creset %C(blue)[%an]%Creset\" --graph --date=short
  ignored-files = ls-files --others -i --exclude-standard
  l = log --oneline --decorate --graph
  ll = log --pretty=medium --decorate --graph --stat
  ls = log --name-only --oneline
  modified-files = ls-files -m
  oops = reset --hard 'HEAD@{1}'
  pr = !"pr() { git fetch origin pull/$1/head:pr-$1; git checkout pr-$1; }; pr"
  pushf = push --force-with-lease
  st = status -s -b
  timeline = log --graph --branches --pretty=oneline --decorate
  trust = "!sh -c 'mkdir -p .git/safe && hash -r'"
  unmerged = branch --sort=committerdate --no-merged
  unstage = reset HEAD
  untracked-files = ls-files -o --exclude-standard

[color "branch"]
  current = red reverse
  local = blue
  remote = green

[color "diff"]
  meta = yellow
  frag = magenta
  old = red bold
  new = green
  plain = white

[color "status"]
  added = yellow
  changed = green
  untracked = cyan

[color]
  status = auto
  diff = auto

[pull]
  ff = only

[push]
  default = tracking

[merge]
  tool = opendiff

[rebase]
  autostash = true

[harrow]
  disabled = true

[diff]
  compactionHeuristic = true

[commit]
  gpgsign = true

[rerere]
  enabled = 1
